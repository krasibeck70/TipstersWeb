@using System.Web.UI.WebControls

@{
    ViewBag.Title = "Login";
}

<main class="col-2 offset-4 text-center">
    <div class="container">
        <div class="row">
            <div class="jumbotron">
                <div class="col-6">
                    <div class="text-center">
                        <h1 class="display-3">Login</h1>
                    </div>
                    <br />
                    <form method="POST" id="login-form" autocomplete="off">
                        <div class="form-group row">
                            <label for="email" class="sr-only">Username or Email</label>
                            <input type="text" name="Username" id="email" class="form-control" placeholder="Username/somebody@example.com" />
                        </div>
                        <div class="form-group row">
                            <label for="key" class="sr-only">Password</label>
                            <input type="password" name="Password" id="key" class="form-control" placeholder="Password" />
                        </div>
                        @if (ViewData.ModelState.ContainsKey("Error"))
                        {
                            <div>
                                <span class="label-danger" style="color: white; font-size: large"><strong>&nbsp @ViewData.ModelState["Error"].Errors[0].ErrorMessage &nbsp</strong></span>
                            </div>
                            <br/>
                            <br/>
                        }
                        <div class="col-lg-offset-3 col-lg-6">
                            <input type="submit" id="btn-login" class="btn btn-success btn-lg btn-block" value="Login" />
                        </div>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
</main>
<br />

