@model Tipsters.Models.ViewModels.PronosticsViewModel.PronosticViewModel

@section Styles{
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
}
@{
    ViewBag.Title = "Edit Tip";
}

@Html.Partial("_LayoutAdmin")

<div class="container-fluid main-container">
    <div class="col-md-2 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li><a href="@Url.Action("Home","Admin")">Home</a></li>
            <li><a href="@Url.Action("Users","Admin")">Users</a></li>
            <li class="active"><a href="@Url.Action("Tips","Admin")">Tips</a></li>
            <li><a href="@Url.Action("Comments","Admin")">Comments</a></li>
            <li><a href="@Url.Action("SelectAdminUser","Admin")">Admin Users</a></li>
        </ul>
    </div>
    <div class="col-md-10 content">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Tip
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <form action="@Url.Action("EditTipSave","Admin", new{id = Model.Id})" method="post">
                        <div class="col-lg-6">
                            <span>Home Team</span>
                            <input type="text" class="form-control" name="HomeTeam" value="@Model.LocalTeam" />
                        </div>
                        <div class="col-lg-6">
                            <span>Away Team</span>
                            <input type="text" class="form-control" name="AwayTeam" value="@Model.AwayTeam" />
                        </div>
                        <div class="col-lg-12">
                            <p></p>
                        </div>
                        <div class="col-lg-6">
                            <span>Strat Match</span>
                            <span class="form-control">@Model.StartMatch</span>
                        </div>
                        <div class="col-lg-6">
                            <span>Type of tip</span>
                            <input type="text" class="form-control" name="TypeOfTip" value="@Model.TypeOfPrognise" />
                        </div>
                        <div class="col-lg-12">
                            <p></p>
                        </div>
                        <div class="col-lg-6">
                            <span>Coefficient</span>
                            <input type="text" class="form-control" name="Coefficient" value="@Model.Koeficent" />
                        </div>
                        <div class="col-lg-6">
                            <span>Chance</span>
                            <input type="text" class="form-control" name="Chance" value="@Model.Chance" />
                        </div>
                        <div class="col-lg-12">
                            <p></p>
                        </div>
                        <div class="col-lg-12">
                            <p></p>
                        </div>

                        <div class="col-lg-offset-10 col-lg-6">
                            <input type="submit" class="btn btn-success" value="Save Changes" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

