@model IEnumerable<Tipsters.Models.Models.Comment>

@section Styles{
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
}
@{
    ViewBag.Title = "Comments";

}


@Html.Partial("_LayoutAdmin")
<div class="container-fluid main-container">
    <div class="col-md-2 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li><a href="@Url.Action("Home","Admin")">Home</a></li>
            <li><a href="@Url.Action("Users","Admin")">Users</a></li>
            <li><a href="@Url.Action("Tips","Admin")">Tips</a></li>
            <li class="active"><a href="@Url.Action("Comments","Admin")">Comments</a></li>
            <li><a href="@Url.Action("SelectAdminUser","Admin")">Admin Users</a></li>
        </ul>
    </div>
    <div class="col-md-10 content">
        <div class="panel panel-default">
            <div class="panel-heading">
                Comments
            </div>
            <div class="panel-body">
                <div class="container bootstrap snippet">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="main-box no-header clearfix">
                                <div class="main-box-body clearfix">
                                    <div class="table-responsive">
                                        <table class="table user-list">
                                            <thead>
                                                <tr>
                                                    <th><span>User</span></th>
                                                    <th><span>Created</span></th>
                                                    <th class="text-center"><span>Status</span></th>
                                                    <th><span>Email</span></th>
                                                    <th>&nbsp;</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var comment in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            <img src="~/Content/Images/@comment.User.Image" alt="">
                                                            <a href="#" class="user-link">@comment.User.FullName</a>
                                                            <span class="user-subhead"></span>
                                                        </td>
                                                        <td>@comment.TimePosted</td>
                                                        <td class="text-center">
                                                            <span class="label label-success">Active</span>
                                                        </td>
                                                        <td>
                                                            <a href="#">@comment.Pronostic.LocalTeam vs @comment.Pronostic.AwayTeam</a>
                                                        </td>
                                                        <td style="width: 20%;">
                                                            <a href="@Url.Action("ViewComment","Admin", new{id = comment.Id})" class="table-link">
                                                                <span class="fa-stack">
                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                    <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                                                </span>
                                                            </a>
                                                            <a href="@Url.Action("EditComment","Admin", new{id = comment.Id})" class="table-link">
                                                                <span class="fa-stack">
                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                                </span>
                                                            </a>
                                                            <a href="@Url.Action("RemoveComment","Admin", new{id = comment.Id})" class="table-link danger" onclick="return confirm('Are you sure you want to delete this comment?')">
                                                                <span class="fa-stack">
                                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                                </span>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


