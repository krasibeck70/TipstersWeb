@model IEnumerable<Tipsters.Models.Models.ApplicationUser>
    
@section Styles{
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/admin.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "Select Admin";
}
@Html.Partial("_LayoutAdmin")
<div class="container-fluid main-container">
    <div class="col-md-2 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li><a href="@Url.Action("Home","Admin")">Home</a></li>
            <li><a href="@Url.Action("Users","Admin")">Users</a></li>
            <li><a href="@Url.Action("Tips","Admin")">Tips</a></li>
            <li><a href="@Url.Action("Comments","Admin")">Comments</a></li>
            <li class="active"><a href="@Url.Action("SelectAdminUser","Admin")">Admin Users</a></li>
        </ul>
    </div>
    <div class="col-md-10 content">
        <div class="panel panel-default">
            <div class="panel-heading">
                Select Admin
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <form method="post" action="@Url.Action("AddAdminUser","Admin")">
                        <div class="col-lg-4">
                            <select name="email" class="col-lg-4 form-control selectpicker " data-style="btn-info" data-live-search="true">
                                <option>Select User</option>
                                @foreach (var user in Model)
                                {
                                    if (user.IsAdmin)
                                    {
                                        continue;
                                    }
                                    <option>@user.Email</option>
                                }

                            </select>
                        </div>
                        <div class="col-lg-2">
                            <input type="submit" class="btn btn-success" value="Assign Admin" />
                        </div>
                    </form>
                    <form method="post" action="@Url.Action("RemoveAdmin","Admin")">
                        <div class="col-lg-4">
                            <select name="email" class="col-lg-4 form-control selectpicker " data-style="btn-info" data-live-search="true">
                                <option>Select Admin</option>
                                @foreach (var user in Model)
                                {
                                    if (user.IsAdmin)
                                    {
                                        <option>@user.Email</option>
                                    }
                                }

                            </select>
                        </div>
                        <div class="col-lg-2">
                            <input type="submit" class="btn btn-success" value="Unassign Admin" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>