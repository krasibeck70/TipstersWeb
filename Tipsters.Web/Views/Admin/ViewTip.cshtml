@model Tipsters.Models.ViewModels.PronosticsViewModel.PronosticViewModel

@section Styles{
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
}
@{
    ViewBag.Title = "View Tip";
}

@Html.Partial("_LayoutAdmin")

<div class="container-fluid main-container">
    <div class="col-md-2 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li><a href="@Url.Action("Home","Admin")">Home</a></li>
            <li><a href="@Url.Action("Users","Admin")">Users</a></li>
            <li class="active"><a href="@Url.Action("Tips","Admin")">Tips</a></li>
            <li><a href="@Url.Action("Comments","Admin")">Comments</a></li>
            <li><a href="@Url.Action("SelectAdminUser","Admin")">Admin Users</a></li>
        </ul>
    </div>
    <div class="col-md-10 content">
        <div class="panel panel-default">
            <div class="panel-heading">
                View Tip
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="col-lg-6">
                        <span>Home Team</span>
                        <span class="form-control">@Model.LocalTeam</span>
                    </div>
                    <div class="col-lg-6">
                        <span>Away Team</span>
                        <span class="form-control">@Model.AwayTeam</span>
                    </div>
                    <div class="col-lg-12">
                        <p></p>
                    </div>
                    <div class="col-lg-6">
                        <span>Created</span>
                        <span class="form-control">@Model.TimeElpased</span>
                    </div>
                    <div class="col-lg-6">
                        <span>Votes Up</span>
                        <span class="form-control">@Model.VotesUp</span>
                    </div>
                    <div class="col-lg-12">
                        <p></p>
                    </div>
                    <div class="col-lg-6">
                        <span>Votes Down</span>
                        <span class="form-control">@Model.VotesDown</span>
                    </div>
                    <div class="col-lg-6">
                        <span>Chance</span>
                        <span class="form-control">@Model.Chance</span>
                    </div>
                    <div class="col-lg-12">
                        <p></p>
                    </div>
                    <div class="col-lg-6">
                        <span>Type of tip</span>
                        <span class="form-control">@Model.TypeOfPrognise</span>
                    </div>
                    <div class="col-lg-6">
                        <span>Start Match</span>
                        <span class="form-control">@Model.StartMatch</span>
                    </div>
                    <div class="col-lg-12">
                        <p></p>
                    </div>
                    <div class="col-lg-6">
                        <span>Coefficient</span>
                        <span class="form-control">@Model.Koeficent</span>
                    </div>
                    <div class="col-lg-6">
                        <span>User Post</span>
                        <span class="form-control">@Model.User.FullName</span>
                    </div>
                    <div class="col-lg-12">
                        <p></p>
                    </div>
                    <div class="col-lg-offset-10 col-lg-4">
                        <a href="@Url.Action("Tips","Admin")" class="btn btn-success">Back to tips</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

