@model Tipsters.Models.ViewModels.UsersViewMode.UserViewModel

@section Styles{
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
}
@{
    ViewBag.Title = "View User";
}

@Html.Partial("_LayoutAdmin")

<div class="container-fluid main-container">
    <div class="col-md-2 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li><a href="@Url.Action("Home","Admin")">Home</a></li>
            <li class="active"><a href="@Url.Action("Users","Admin")">Users</a></li>
            <li><a href="@Url.Action("Tips","Admin")">Tips</a></li>
            <li><a href="@Url.Action("Comments","Admin")">Comments</a></li>
            <li><a href="@Url.Action("SelectAdminUser","Admin")">Admin Users</a></li>
        </ul>
    </div>
    <div class="col-md-10 content">
        <div class="panel panel-default">
            <div class="panel-heading">
                View User
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="col-lg-6">
                        <span>Id</span>
                        <span class="form-control">@Model.Id</span>
                    </div>
                    <div class="col-lg-6">
                        <span>Email</span>
                        <span class="form-control">@Model.Email</span>
                    </div>
                    <div class="col-lg-12">
                        <p></p>
                    </div>
                    <div class="col-lg-6">
                        <span>Full Name</span>
                        <span class="form-control">@Model.FullName</span>
                    </div>
                    <div class="col-lg-6">
                        <span>Birth Date</span>
                        <span class="form-control">@Model.BirthDate.ToShortDateString()</span>
                    </div>
                    <div class="col-lg-12">
                        <p></p>
                    </div>
                    <div class="col-lg-6">
                        <span>Image</span>
                        <span class="form-control">@Model.Image</span>
                    </div>
                    <div class="col-lg-6">
                        <span>Likes Pronostics</span>
                        <span class="form-control">@Model.LikesPronostics.Count</span>
                    </div>
                    <div class="col-lg-12">
                        <p></p>
                    </div>
                    <div class="col-lg-6">
                        <span>Followers</span>
                        <span class="form-control">@Model.OwnerFollowers.Count</span>
                    </div>
                    <div class="col-lg-6">
                        <span>Following</span>
                        <span class="form-control">@Model.OwnerFollowing.Count</span>
                    </div>
                    <div class="col-lg-12">
                        <p></p>
                    </div>
                    <div class="col-lg-offset-10 col-lg-4">
                        <a href="@Url.Action("Users","Admin")" class="btn btn-success">Back to users</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
