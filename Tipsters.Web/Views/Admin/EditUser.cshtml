@model Tipsters.Models.ViewModels.UsersViewMode.UserViewModel

@section Styles{
    <link href="~/Content/admin.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Edit Users";
}

@Html.Partial("_LayoutAdmin")
<div class="container-fluid main-container">
    <div class="col-md-2 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li class="active"><a href="@Url.Action("Home","Admin")">Home</a></li>
            <li><a href="@Url.Action("Users","Admin")">Users</a></li>
            <li><a href="@Url.Action("Tips","Admin")">Tips</a></li>
            <li><a href="@Url.Action("Comments","Admin")">Comments</a></li>
            <li><a href="#">Others</a></li>
        </ul>
    </div>
    <div class="col-md-10 content">
        <div class="panel panel-default">
            <div class="panel-heading">
                Dashboard
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <form action="@Url.Action("EditUserSave","Admin", new{id = Model.Id})" method="post">
                        <div class="col-lg-6">
                            <span>Email</span>
                            <input type="text" class="form-control" name="Email" value="@Model.Email" />
                        </div>
                        <div class="col-lg-6">
                            <span>Full Name</span>
                            <input type="text" class="form-control" name="FullName" value="@Model.FullName" />
                        </div>
                        <div class="col-lg-12">
                            <p></p>
                        </div>
                        <div class="col-lg-6">
                            <span>Birthdate</span>
                            <input type="text" class="form-control" name="Birthdate" value="@Model.BirthDate.ToShortDateString()" />
                        </div>
                        <div class="col-lg-6">
                            <span>Image</span>
                            <input type="text" class="form-control" name="Image" value="@Model.Image" />
                        </div>
                        <div class="col-lg-12">
                            <p></p>
                        </div>
                        <div class="col-lg-12">
                            <p></p>
                        </div>

                        <div class="col-lg-offset-10 col-lg-6">
                            <input type="submit" class="btn btn-success" value="Save Changes" />
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>
