@model Tipsters.Models.Models.Comment

@section Styles{
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
}
@{
    ViewBag.Title = "View Comment";
}

@Html.Partial("_LayoutAdmin")

<div class="container-fluid main-container">
    <div class="col-md-2 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li><a href="@Url.Action("Home","Admin")">Home</a></li>
            <li><a href="@Url.Action("Users","Admin")">Users</a></li>
            <li><a href="@Url.Action("Tips","Admin")">Tips</a></li>
            <li class="active"><a href="@Url.Action("Comments","Admin")">Comments</a></li>
            <li><a href="@Url.Action("SelectAdminUser","Admin")">Admin Users</a></li>
        </ul>
    </div>
    <div class="col-md-10 content">
        <div class="panel panel-default">
            <div class="panel-heading">
                View Tip
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <form method="post" action="@Url.Action("EditComment","Admin",new {id = Model.Id})">
                        <div class="col-lg-12">
                            <span>Comment</span>
                            <input type="text" name="Comment" class="form-control"value="@Model.Message" />
                        </div>

                        <div class="col-lg-12">
                            <p></p>
                        </div>
                        <div class="col-lg-offset-10 col-lg-6">
                            <input type="submit" class="btn btn-success" value="Save Changes" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>



